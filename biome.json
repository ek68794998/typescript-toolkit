{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on",
				"useSortedKeys": "on"
			}
		}
	},
	"files": {
		"includes": [
			"**/*.js",
			"**/*.ts",
			"**/*.cjs",
			"**/*.mjs",
			"**/*.d.cts",
			"**/*.d.mts",
			"**/*.jsx",
			"**/*.tsx",
			"**/*.css",
			"**/*.scss",
			"**/*.json",
			"**/*.jsonc",
			"!**/package.json",
			"!./node_modules/**/*"
		]
	},
	"formatter": {
		"attributePosition": "auto",
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"attributePosition": "auto",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "all"
		},
		"jsxRuntime": "reactClassic"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noSwitchDeclarations": "off",
				"noUnusedImports": {
					"fix": "safe",
					"level": "error",
					"options": {}
				}
			},
			"performance": {
				"noDelete": "info"
			},
			"recommended": true,
			"style": {
				"useImportType": "off"
			},
			"suspicious": {
				"noGlobalIsNan": "info",
				"noUnknownAtRules": "info",
				"useAwait": "error"
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"useIgnoreFile": true
	}
}
